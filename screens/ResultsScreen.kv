<Widget>:
	font_name:'res/fonts/Roboto-Regular.ttf'

<ResultsScreen>:

	canvas:
		Color:
			rgb: 0.13725, 0.12157, 0.12549
		Rectangle:
            pos: self.pos
            size: self.size

	name: app.get_string('Results_Screen')

	BoxLayout:
		orientation: 'horizontal'

		FloatLayout:
			id: mainLayout
			size_hint: (0.735, 1)

			Label:
				id: mainLabel
				size_hint: (None, None)
				width: 700
				height: 150
				pos: (20, 200)

			Label:
				id: topLabel
				size_hint: (None, None)
				width: 100
				height: 30
				pos: (40, 170)

			TextInput:
				id: topField
				size_hint: (None, None)
				width: 540
				height: 30
				pos: (180, 170)
				multiline: False
				readonly: True
				allow_copy: True

			Label:
				id: middleLabel
				size_hint: (None, None)
				width: 100
				height: 30
				pos: (40, 110)
				color: (1, 0.72157, 0, 1)

			TextInput:
				id: middleField
				size_hint: (None, None)
				width: 400
				height: 30
				pos: (180, 110)
				multiline: False
				readonly: True
				allow_copy: True

			Label:
				id: addressLabel
				size_hint: (None, None)
				width: 100
				height: 30
				pos: (40, 80)

			TextInput:
				id: addressField
				size_hint: (None, None)
				width: 400
				height: 30
				pos: (180, 80)
				multiline: False
				readonly: True
				allow_copy: True

			Label:
				id: bottomLabel
				size_hint: (None, None)
				width: 100
				height: 30
				pos: (40, 50)
				color: (0.93725, 0.21176, 0.07843, 1)

			TextInput:
				id: bottomField
				size_hint: (None, None)
				width: 400
				height: 30
				pos: (180, 50)
				multiline: False
				readonly: True
				allow_copy: True


		AsyncImage:
			id: image
			source: 'res/images/HomePageImage.png'
			size_hint: (.265, 1)
			allow_stretch: True
			keep_ratio: False
